{
  "metric_groups": [
    {
      "name": "Valuation Metrics",
      "metrics": {
        "TEV": "Market Cap + Total Debt - Cash",
        "Mkt Cap": "Share Price x Total Shares Outstanding",
        "SP": "Share Price",
        "TEV/EBITDA": "TEV / EBITDA",
        "TEV/Rev": "TEV / Revenue",
        "TEV/FCF": "TEV / Free Cash Flow",
        "P/E": "Market Cap / Net Income",
        "P/B": "Market Cap / Book Value",
        "EPS": "Net Income / Total Shares Outstanding"
      }
    },
    {
      "name": "Income Statement",
      "metrics": {
        "Rev": "Total Sales (Accrual Basis)",
        "Rev 3YCAGR": "((Current Year Revenue / Revenue 3 Years Ago)^(1/3)) - 1, 3Y Compound Annual Growth Rate for Revenue",
        "GP": "Gross Profit, Revenue - Cost of Goods Sold (COGS) (Accrual Basis)",
        "Net Inc": "Revenue - All Expenses (Accrual Basis)",
        "Op Inc": "Revenue - Cost of Good Sold (COGS) - Operating Expenses (Accrual Basis)",
        "EBITDA": "Operating Income + Depreciation & Amortization (Accrual Basis)"
      }
    },
    {
      "name": "Cash Flow",
      "metrics": {
        "CFO": "Operating Cash Flow, Net Income + D&A (Non-Cash Expenses) + Changes in Working Capital (Cash Basis)",
        "FCF": "CFO - Capital Expenditures",
        "Op Exp": "Operating Expenses",
        "CapEx": "Capital Expenditures",
        "Int Exp": "Interest Paid on Debt"
      }
    },
    {
      "name": "Margins",
      "metrics": {
        "GP Marg": "Gross Profit / Revenue",
        "EBITDA Marg": "EBITDA / Revenue",
        "Net Marg": "Net Income / Revenue",
        "Op Marg": "Operating Income / Revenue",
        "FCF Marg": "Free Cash Flow / Revenue"
      }
    },
    {
      "name": "Shareholder Yield",
      "metrics": {
        "BB Yield": "Buyback Yield, (Net Shares Repurchased / Total Shares Outstanding)",
        "Ins Buys": "Total Shares Purchased by Insiders"
      }
    },
    {
      "name": "Balance Sheet",
      "metrics": {
        "Equity": "Total Assets - Total Liabilities",
        "Debt": "Short-Term Debt + Long-Term Debt",
        "Assets": "Sum of All Assets",
        "Liab": "Sum of All Liabilities",
        "TBV": "Total Assets - Intangible Assets - Total Liabilities"
      }
    },
    {
      "name": "Solvency",
      "metrics": {
        "D/E": "Total Debt / Shareholder Equity",
        "Debt/EBITDA": "Total Debt / EBITDA",
        "Cash Ratio": "Cash & Cash Equivalents / Current Liabilities",
        "Cash/Debt": "Cash & Cash Equivalents / Total Debt",
        "Int Cov": "EBIT / Interest Expense"
      }
    },
    {
      "name": "Liquidity",
      "metrics": {
        "Curr Ratio": "Current Assets / Current Liabilities",
        "Quick Ratio": "(Current Assets - Inventory) / Current Liabilities"
      }
    },
    {
      "name": "Efficiency",
      "metrics": {
        "WC Turn": "Revenue / (Current Assets - Current Liabilities)",
        "Asset Turn": "Revenue / Total Assets"
      }
    },
    {
      "name": "Profitability",
      "metrics": {
        "ROA": "Net Income / Total Assets",
        "ROE": "Net Income / Shareholder Equity",
        "ROIC": "Net Operating Profit After Tax (NOPAT) / Invested Capital"
      }
    }
  ],
  "colors": {
    "DARK_GREEN": [51, 153, 51],
    "MED_GREEN": [102, 187, 102],
    "LIGHT_GREEN": [144, 213, 144],
    "DARK_RED": [204, 51, 51],
    "MED_RED": [230, 102, 102],
    "LIGHT_RED": [247, 153, 153],
    "YELLOW": [255, 217, 102]
  }
}
